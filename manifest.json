{
  "name": "Donation Destroyer",
  "version": "1.4",
  "description": "Removes the donation popups of \"non-profit\" foundation websites, replacing it with their actual financials.",
  "icons": {
	  "32": "assets/dd_icon.png",
	  "64": "assets/dd_icon_big.png"
  },
  "manifest_version": 3,
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://*.wikipedia.org/*",
    "https://*.linuxfoundation.org/*",
    "https://*.mozilla.org/*",
    "https://*.mozilla.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "donation-destroyer@example.com",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.linuxfoundation.org/*"],
      "css": ["styles.css"],
      "js": ["dd_common.js", "dd_linuxfoundation.js"],
      "all_frames": true
    },
    {
      "matches": ["https://*.wikipedia.org/*"],
      "css": ["styles.css"],
      "js": ["dd_common.js", "dd_wikipedia.js"],
      "all_frames": true
    },
    {
      "matches": [
        "https://*.mozilla.org/*",
        "https://*.mozilla.com/*"
      ],
      "css": ["styles.css"],
      "js": ["dd_common.js", "dd_mozilla.js"],
      "all_frames": true
    }
  ]
}
