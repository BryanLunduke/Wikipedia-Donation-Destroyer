{
  "name": "Wikipedia Donation Destroyer",
  "version": "1.2",
  "description": "Removes the Wikipedia donation popup, replacing it with Wikipedia's actual financials.",
  "manifest_version": 3,
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://*.wikipedia.org/*",
    "https://*.linuxfoundation.org/*",
    "https://*.mozilla.org/*",
    "https://*.mozilla.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.wikipedia.org/*",
        "https://*.mozilla.org/*",
        "https://*.mozilla.com/*",
        "https://*.linuxfoundation.org/*"
      ],
      "js": ["wrapper.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pkg-wikipedia/*",
        "pkg-mozilla/*",
        "pkg-linuxfoundation/*"
      ],
      "matches": [
        "https://*.wikipedia.org/*",
        "https://*.mozilla.org/*",
        "https://*.mozilla.com/*",
        "https://*.linuxfoundation.org/*"
      ]
    }
  ]
}