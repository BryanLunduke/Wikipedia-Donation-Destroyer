{
  "name": "Wikipedia Donation Destroyer",
  "version": "1.3",
  "description": "Removes the Wikipedia and others websites donations popups, replacing it with their actual financials.",
  "manifest_version": 3,
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://*.wikipedia.org/*",
    "https://*.linuxfoundation.org/*",
    "https://*.mozilla.org/*",
    "https://*.mozilla.com/*",
    "https://*.firefox.com/*",
    "https://*.firefox.org/*",
    "https://*.gnome.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.linuxfoundation.org/*"],
      "js": ["wdd_linuxfoundation.js"],
      "all_frames": true
    },
    {
      "matches": ["https://*.wikipedia.org/*"],
      "js": ["wdd_wikipedia.js"],
      "all_frames": true
    },
    {
      "matches": [
        "https://*.mozilla.com/*",
        "https://*.mozilla.org/*",
        "https://*.firefox.com/*",
        "https://*.firefox.org/*"
      ],
      "js": ["wdd_mozilla.js"],
      "all_frames": true
    },    
    {
      "matches": [
        "https://*.gnome.org/*"
      ],
      "js": ["wdd_gnome.js"],
      "all_frames": true
    }
  ]
}